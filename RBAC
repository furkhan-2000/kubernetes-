apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: mustang
  namespace: default
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "list"]
- apiGroups: ["apps"]                                                  #binding Role to User 
  resources: ["replicasets", "deployment"]
  verbs: ["create", "get", "list"]
--- 
apiVersion: rbac.authorization.k8s.io 
kind: RoleBinding 
metadata: 
 name: bmw 
 namespace: default 
subjects: 
- kind: User 
  name: pushpa  
roleRef: 
  kind: Role 
  name: mustang 
  apiGroup: rbac.authorization.k8s.io 