apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: coss
  namespace: default
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "list"]
- apiGroups: ["apps"]
  resources: ["replicasets", "configmaps"]                  #role 
  verbs: ["create", "get", "delete"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: ssoc
subjects:
- kind: User
  name: ola
  apiGroup: rbac.authorization.k8s.io                           # clusterbinding 
roleRef:
  kind: ClusterRole
  name: clus
  apiGroup: rbac.authorization.k8s.io
