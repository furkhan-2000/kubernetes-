apiVersion: v1
kind: ServiceAccount
metadata:
  name: poki
  namespace: default
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: cos
  namespace: default
rules:
- apiGroups: ["apps"]
  resources: ["deployments"]
  verbs: ["get", "list", "create"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: cossy
  namespace: default
subjects:
- kind: ServiceAccount
  name: poki
  namespace: default
roleRef:
  kind: Role
  name: cos
  apiGroup: rbac.authorization.k8s.io
